// 缓动函数
//
// @author  firede(firede@firede.us)
// @desc    通过 `cubic-bezier` 定义的更多缓动函数
// @see     http://easings.net


easing($type = 'ease')

    // ease sine
    return cubic-bezier(0.470, 0.000, 0.745, 0.715) if $type == 'in-sine'
    return cubic-bezier(0.390, 0.575, 0.565, 1.000) if $type == 'out-sine'
    return cubic-bezier(0.445, 0.050, 0.550, 0.950) if $type == 'in-out-sine'

    // ease quad
    return cubic-bezier(0.550, 0.085, 0.680, 0.530) if $type == 'in-quad'
    return cubic-bezier(0.250, 0.460, 0.450, 0.940) if $type == 'out-quad'
    return cubic-bezier(0.455, 0.030, 0.515, 0.955) if $type == 'in-out-quad'

    // ease cubic
    return cubic-bezier(0.550, 0.055, 0.675, 0.190) if $type == 'in-cubic'
    return cubic-bezier(0.215, 0.610, 0.355, 1.000) if $type == 'out-cubic'
    return cubic-bezier(0.645, 0.045, 0.355, 1.000) if $type == 'in-out-cubic'

    // ease quart
    return cubic-bezier(0.895, 0.030, 0.685, 0.220) if $type == 'in-quart'
    return cubic-bezier(0.165, 0.840, 0.440, 1.000) if $type == 'out-quart'
    return cubic-bezier(0.770, 0.000, 0.175, 1.000) if $type == 'in-out-quart'

    // ease quint
    return cubic-bezier(0.755, 0.050, 0.855, 0.060) if $type == 'in-quint'
    return cubic-bezier(0.230, 1.000, 0.320, 1.000) if $type == 'out-quint'
    return cubic-bezier(0.860, 0.000, 0.070, 1.000) if $type == 'in-out-quint'

    // ease expo
    return cubic-bezier(0.950, 0.050, 0.795, 0.035) if $type == 'in-expo'
    return cubic-bezier(0.190, 1.000, 0.220, 1.000) if $type == 'out-expo'
    return cubic-bezier(1.000, 0.000, 0.000, 1.000) if $type == 'in-out-expo'

    // ease circ
    return cubic-bezier(0.600, 0.040, 0.980, 0.335) if $type == 'in-circ'
    return cubic-bezier(0.075, 0.820, 0.165, 1.000) if $type == 'out-circ'
    return cubic-bezier(0.785, 0.135, 0.150, 0.860) if $type == 'in-out-circ'

    // ease back
    return cubic-bezier(0.600, -0.280, 0.735, 0.045) if $type == 'in-back'
    return cubic-bezier(0.175,  0.885, 0.320, 1.275) if $type == 'out-back'
    return cubic-bezier(0.680, -0.550, 0.265, 1.550) if $type == 'in-out-back'

    // 兼容默认缓动函数
    if $type == 'ease'
        return unquote('ease')
    else if $type in ('in' 'out' 'in-out')
        return unquote('ease-' + $type)
    else
        error('不支持 `' + $type + '` 缓动函数')

