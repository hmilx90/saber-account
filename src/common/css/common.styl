@require('./reset.styl');

body
    margin: 0;
    padding: 0;
    font-size: 16px;
    font-family: sans-serif;


.header
    z-index: 100;
    line-height: 3.125rem;
    background-color: #cfe7e7;
    color: #59c0bf;
    font-size: 1.5rem;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    text-align: center;


    a
        text-decoration: none;
        color: #59c0bf;
        .icon-list
            position: absolute;
            top: 13px;
            left: 15px;

        .icon-share2
            position: absolute;
            top: 13px;
            right: 15px;

.main
    line-height: 24px;
    font-size: 16px;
    color: #7d7d7d;
    margin-bottom: 24px;
    width: 100%;


.edit-btn
    display: block;
    line-height: 47px;
    font-size: 24px;
    background-color: #d7e6ad;
    text-decoration: none;
    color: #000;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    text-align:center;

a
    color: #7d7d7d;


/* 全局样式 */
.ui-mask
    position: fixed
    background: rgba(0, 0, 0, 0.5)
    left: 0
    right: 0
    top: 0
    bottom: 0
    z-index: 100

.header
    position: relative

.nav-btn
    position: absolute
    left: 19px
    top: 14px
    &:before
        content: "\e60a"
        font-family: 'icomoon'
        speak: none
        font-style: normal
        font-weight: normal
        font-variant: normal
        text-transform: none
        line-height: 1
        
        /* Better Font Rendering =========== */
        -webkit-font-smoothing: antialiased
        -moz-osx-font-smoothing: grayscale
        
        font-size: 21px
        color: #5bbfbf
        width: 21px
        height: 21px
        display: block

.icon-share2
    position: absolute
    right: 19px
    top: 14px

.showNav
    left: 0px!important
.nav-sidebar
    position: fixed
    background-color: #e8eaea
    top: 0
    bottom: 0
    left: -235px
    right: 30px
    z-index: 101
    width: 235px
    box-shadow: -4px 0px 6px #cfcfcf inset
    transition: left .25s cubic-bezier(0,0,0.58,1.0)
    header
        height: 65px
        line-height: 1000px
        overflow: hidden
        bg2x: './img/navtop.png'
        background-position: 20px 10px
        background-color: #e8eaea
    .sidebar-body li
        line-height: 53px
        background: white
        border-bottom: 1px solid #c7c7c7
        font-size: 20px
        color: #7a7a7a
        a
            display: block
            padding-left: 34px
    footer p
        font-size: 10px
        color: #7a7a7a
        margin: 0
        line-height: 18px
    footer
        margin-bottom: 10px
        text-align: center
        position: absolute
        bottom: 59px
        left: 0
        right: 0

/* 确认弹窗 */
.ui-confirm
    fixed: 50% 15px _ 15px
    padding: 15px 13px
    color: #000
    font-size: rem(15px)
    text-align: center
    z-index: 110
    background: #FFF

    [data-role="content"]
        margin: 2px 0 17px
        line-height: 1.5
        font-size: 12px

        .share
            // 增加间距 设置边框
            // 是为了区域选中更方便
            margin: 20px 0
            border: 1px solid #FFF
            text-align: left

        .tip
            color: #CCC
            font-size: rem(12px)
            text-align: left

    [data-role="bar"]
        display: flex

        span
            display: block
            flex: 1
            height: 33px
            line-height: 33px
            border: 1px solid #FC867E

        [data-role="btn-cancel"]
            margin-right: 10px
            background: #FFF
            color: #FB0000

        [data-role="btn-ok"]
            background: #FB2F09
            border-color: #FB0000
            color: #FFF

/* 分享组件 */
.ui-share
    fixed: _ 0 0 0
    z-index: 110
    background: #FFF
    color: #333
    text-align: center
    transition: all 0.3s ease-out
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

    .targets
        padding: 20px 0 18px
        overflow: hidden

        span
            display: inline-block
            margin: 0 8px

            i
                display: block
                margin: 0 auto 10px
                position: relative
                width: 59px
                height: 59px
                border: 1px solid #EEE
                border-radius: 10px

                &::before
                    content: " "
                    absolute: 50% _ _ 50%
                    width: 40px
                    height: 40px
                    margin-left: -20px
                    margin-top: -20px
                    bg2x: './img/sprite.png'
                    background-position: 0 -300px

            &[data-action="wechat"]
                    i
                        &::before
                            background-position: 0 -300px

            &[data-action="qq"]
                    i
                        &::before
                            background-position: -40px -300px

            &[data-action="weibo"]
                    i
                        &::before
                            background-position: -80px -300px

            &[data-action="douban"]
                    i
                        &::before
                            background-position: -120px -300px

    .btn-close
        height: 49px
        line-height: 49px
        border-top: 1px solid #EEE

.ui-share-hidden
    bottom: -200px
    visibility: hidden


/* 气泡提示 */
.ui-balloon
    fixed: _ 50px 20px
    padding: 15px
    text-align: center
    font-size: rem(15px)
    line-height: 1.5
    color: #FFF
    background: rgba(0, 0, 0, 0.7)
    z-index: 200
    transition: all 0.5s ease-out

.ui-balloon-hidden
    opacity: 0
    visibility: hidden