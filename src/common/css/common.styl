@require('./reset.styl');

body
    margin: 0;
    padding: 0;
    font-size: 16px;
    font-family: sans-serif;


.header
    z-index: 100;
    line-height: 3.125rem;
    background-color: #cfe7e7;
    color: #59c0bf;
    font-size: 1.5rem;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    text-align: center;


    a
        text-decoration: none;
        color: #59c0bf;
        .icon-list
            position: absolute;
            top: 13px;
            left: 15px;

        .icon-share2
            position: absolute;
            top: 13px;
            right: 15px;

.main
    line-height: 24px;
    font-size: 16px;
    color: #7d7d7d;
